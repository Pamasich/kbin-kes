      },
      {
        "type": "select",
        "key": "defaultPostSort",
        "label": "Select default sort for microblogs:",
        "values": ["top", "hot", "newest", "active", "commented"],
        "initial": "hot"
      },
      {
        "type": "select",
        "key": "defaultProfileSort",
