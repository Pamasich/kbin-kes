{
    "name": "Customizable Default Sort Option",
    "namespace": "default-sort",
    "author": "Pamasich",
    "version": "1.0.0",
    "label": "Change Default Sort",
    "desc": "Changes the default sort option used when viewing magazines or comments.",
    "login": false,
    "recurs": false,
    "page": "general",
    "fields": [
      {
        "type": "select",
        "key": "defaultThreadSort",
        "label": "Select default sort for threads:",
        "values": ["default", "top", "hot", "newest", "active", "commented"],
        "initial": "default"
      },
      {
        "type": "select",
        "key": "defaultCommentSort",
        "label": "Select default sort for comments:",
        "values": ["default", "top", "hot", "active", "newest", "oldest"],
        "initial": "default"
      },
      {
        "type": "select",
        "key": "defaultPostSort",
        "label": "Select default sort for microblogs:",
        "values": ["default", "top", "hot", "newest", "active", "commented"],
        "initial": "default"
      },
      {
        "type": "select",
        "key": "defaultMagazineSort",
        "label": "Select default sort for magazines:",
        "values": ["default", "newest", "hot", "active", "abandoned"],
        "initial": "default"
      }
    ]
  }
  